<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="#2fff0000"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android模块"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="Android调用Js"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="onCallJs"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="Android调用Js并传参数"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="onCallJsArgs"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_button"
            android:text="隐藏webview"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="onHide"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_button"
            android:text="显示webview"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="onShow"/>

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调用Android显示结果"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />
        
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlyt_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2f00ff00"
        android:visibility="gone">
    </RelativeLayout>

</LinearLayout>